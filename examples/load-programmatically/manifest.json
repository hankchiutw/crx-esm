{
  "name": "crx-esm-example",
  "short_name": "crx-esm-example",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "crx-esm example",
  "homepage_url": "https://github.com/hankchiutw/crx-esm",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "browser_action": {
    "default_title": "Click or press Cmd/Ctrl+Shift+A to launch",
    "name": "Click or press Cmd/Ctrl+Shift+A to launch"
  },
  "commands": {
    "toggle-my-crx": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Toggle"
    }
  },
  "web_accessible_resources": ["assets/*"]
}
